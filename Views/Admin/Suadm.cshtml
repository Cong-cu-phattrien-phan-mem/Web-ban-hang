@model BookStore.Models.DANHMUC

@{
    ViewBag.Title = "Suadm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center;color:blue">Sửa Thông Tin Danh Mục</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MaDM)

        <div class="form-group">
            @Html.LabelFor(model => model.TenDM, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenDM, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenDM, "", new { @class = "text-danger" })
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10" style="text-align:center">
                <input class="btn btn-info" type="submit" style="border:none; background-color:blue;width:100px" value="Sửa" />
                <a href="@Url.Action("Danhmuc", "Admin")" class="btn btn-info" role="button" style="width:100px">Trở về</a>
            </div>
        </div>
    </div>
}